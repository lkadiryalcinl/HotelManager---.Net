@model CreateSendMessageDto

@{
    ViewData["Title"] = "AddSendMessage";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<div class="container-fluid">

    <div class="email-left-box">
        <a href="email-compose.html" class="btn btn-primary btn-block">Yeni Mesaj Oluştur</a>
        @await Html.PartialAsync("SideBarAdminContactPartial")
        <h5 class="mt-5 m-b-10">Kategoriler</h5>
        @await Html.PartialAsync("SideBarAdminContactCategoryPartial")
    </div>
    <div class="email-right-box">
        <div class="toolbar" role="toolbar">
            <div class="btn-group m-b-20">
                <button type="button" class="btn btn-light">
                    <i class="fa fa-archive"></i>
                </button>
                <button type="button" class="btn btn-light">
                    <i class="fa fa-exclamation-circle"></i>
                </button>
                <button type="button" class="btn btn-light">
                    <i class="fa fa-trash"></i>
                </button>
            </div>
            <div class="btn-group m-b-20">
                <button type="button" class="btn btn-light dropdown-toggle" data-toggle="dropdown">
                    <i class="fa fa-folder"></i>  <b class="caret m-l-5"></b>
                </button>
                <div class="dropdown-menu">
                    <span class="dropdown-header">Taşı</span>  <a class="dropdown-item" href="javascript: void(0);">Sosyal</a>  <a class="dropdown-item" href="javascript: void(0);">Promosyonlar</a>  <a class="dropdown-item" href="javascript: void(0);">Güncellemeler</a>
                    <a class="dropdown-item" href="javascript: void(0);">Forums</a>
                </div>
            </div>
            <div class="btn-group m-b-20">
                <button type="button" class="btn btn-light dropdown-toggle" data-toggle="dropdown">
                    <i class="fa fa-tag"></i>  <b class="caret m-l-5"></b>
                </button>
                <div class="dropdown-menu">
                    <span class="dropdown-header">Kategoriler: </span>  <a class="dropdown-item" href="javascript: void(0);">Güncellemeler</a>  <a class="dropdown-item" href="javascript: void(0);">Sosyal</a>  <a class="dropdown-item" href="javascript: void(0);">Promosyonlar</a>
                    <a class="dropdown-item" href="javascript: void(0);">Forumlar</a>
                </div>
            </div>
            <div class="btn-group m-b-20">
                <button type="button" class="btn btn-light dropdown-toggle" data-toggle="dropdown">
                    More <span class="caret m-l-5"></span>
                </button>
                <div class="dropdown-menu">
                    <span class="dropdown-header">More Option :</span>  <a class="dropdown-item" href="javascript: void(0);">Okunmamış işaretler</a>  <a class="dropdown-item" href="javascript: void(0);">Görevlere Ekle</a>  <a class="dropdown-item"
                                                                                                                                                                                                                                  href="javascript: void(0);">Yıldızla</a>  <a class="dropdown-item" href="javascript: void(0);">Sustur</a>
                </div>
            </div>
        </div>
        <div class="compose-content mt-5">
            <form method="post" asp-action="AddSendMessage" asp-controller="AdminContact">
                <div class="form-group">
                    <input type="text" class="form-control bg-transparent" placeholder=" Alıcı Mail" asp-for="RecieverMail">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control bg-transparent" placeholder=" Konu" asp-for="Title">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control bg-transparent" placeholder=" Alıcı Adı Soyadı" asp-for="RecieverName">
                </div>
                <div class="form-group">
                    <textarea class="textarea_editor form-control bg-light" rows="15" placeholder=" Mesajınızı yazınız..." asp-for="Content"></textarea>
                </div>
                <div class="text-left m-t-15">
                    <button class="btn btn-primary m-b-30 m-t-15 f-s-14 p-l-20 p-r-20 m-r-10"><i class="fa fa-paper-plane m-r-5"></i> Gönder</button>
                </div>
            </form>
        </div>
    </div>
</div>

