@model List<ResultStaffDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<table class="table table-bordered">
    <tr class="align-items-center">
        <th>Personel ID</th>
        <th>Personel Adı</th>
        <th>Personel Unvan</th>
        <th>Güncelle</th>
        <th>Sil</th>
        <th>Detaylar</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.StaffID</td>
            <td>@item.Name</td>
            <td>@item.Title</td>
            <td><a href="/Staff/UpdateStaff/@item.StaffID" class="btn btn-info">Güncelle</a></td>
            <td><a href="/Staff/DeleteStaff/@item.StaffID" class="btn btn-danger">Sil</a></td>
            <td><a href="#" class="btn btn-linkedin">Detaylar</a></td>
        </tr>
    }
</table>

<td><a href="/Staff/AddStaff" class="btn btn-whatsapp">Yeni Personel Girişi</a></td>